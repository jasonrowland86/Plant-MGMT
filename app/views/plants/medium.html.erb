<div class="container">
  <div class="user-content">
    <div>
      <h2>Evenly Moist Plants</h2>
      <% if @plants %>
        <% @plants.each do |plant| %>
          <div class="plant">
            <%= link_to plant.name, plant_path(plant) %>
          </div>
        <% end %>
      <% else %>
        <h3>You have no plants of this type</h3>
      <% end %>
      <br>
      <%= link_to 'Add New Plant', new_plant_path %>
      <br>
      <%= link_to 'Back', plants_path %>
    </div>
  </div>
</div>

<div class="container">
  <div class="user-content">
    <div class="main">
      <p id="notice"><%= notice %></p>

      <div class="container-a calendar-a">
        <div class="event-new">
          <h2>Your Watering Schedule</h2>
        </div>
        <br>

        <%= month_calendar events: @calendar_events do |day, events| %>
        <div><strong><%= day.to_s(:short) %></strong></div>
          <% events.each do |event| %>
            <div>
              <%= link_to event.name, event_path(event.id, time: event.start_time) %>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="container-b event-new">
        <table>
          <thead>
            <tr>
              <th>Type/</th>
              <th>When/</th>
              <th>Frequency</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td><%= event.name %></td>
                <td><%= event.start_time %></td>
                <td><%= event.recurring %></td>
                <td><%= link_to 'Show', event %></td>
                <td><%= link_to 'Edit', edit_event_path(event) %></td>
                <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
        <%= link_to "New Event", {controller: "events", action: "new"}, class: "event-new" %>
      </div>
    </div>
  </div>
</div>

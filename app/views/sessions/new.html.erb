<div class="container">
  <div class="intro-message">
    <h2>Sign In</h2>
    <%= form_for @user, url: session_path do |f| %>
      <%= f.text_field :username, placeholder: 'Username' %>
      <br>
      <%= f.password_field :password, placeholder: 'Password' %>
      <br>
      <%= f.submit 'Login' %>
    <% end %>
  </div>
</div>
